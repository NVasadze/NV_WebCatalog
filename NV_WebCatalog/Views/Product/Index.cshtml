@model IEnumerable<NV_WebCatalog.Domain.Entities.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th style="width:200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.QuantityPerUnit</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">
                        Details
                    </a>

                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">
                        Edit
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
