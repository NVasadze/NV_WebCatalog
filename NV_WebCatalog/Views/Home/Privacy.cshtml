@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 bg-light">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p class="lead">
                Your privacy is important to us. Use this page to detail your site's privacy policy.  
                Ensure that you inform users about data collection, storage, and usage practices in a clear and transparent way.
            </p>
            <p>
                For example:
            </p>
            <ul>
                <li>We do not share your personal data with third parties without consent.</li>
                <li>All sensitive information is encrypted and securely stored.</li>
                <li>You have the right to request your data at any time.</li>
            </ul>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Back to Home
            </a>
        </div>
    </div>
</div>
